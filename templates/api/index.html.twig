{% extends 'base.html.twig' %}

{% block title %}Liste des régions{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des régions</h1>
    <div class="row">
        {% for maRegion in mesRegions %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">{{ maRegion.nom }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ maRegion.code }}</h4>
                        </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
